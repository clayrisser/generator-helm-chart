

# Persistence
  - variable: persistence.enabled
    default: false
    description: ''
    type: boolean
    required: true
    label: enabled
    show_subquestion_if: true
    group: Persistence
    subquestions:
      - variable: persistence.storageClass
        default: ''
        description: ''
        type: storageclass
        required: false
        label: 'storage class'
      - variable: persistence.accessMode
        default: ReadWriteOnce
        description: ''
        type: enum
        options:
          - ReadWriteOnce
          - ReadWriteMany
          - ReadOnlyMany
        required: false
        label: 'access mode'<% for (var i = 0; i < workloads.length; i++) { workload = workloads[i]; %>
      - variable: persistence.existingClaim.<%- _.camelCase(workload.name) %>
        default: ''
        description: ''
        type: string
        required: false
        label: '<%- _.camelCase(workload.name) %> existing claim'
      - variable: persistence.size
        default: 1Gi
        description: ''
        type: string
        required: true
        label: '<%- _.camelCase(workload.name) %> size'<% } %>
      - variable: persistence.velero.enabled
        default: false
        description: ''
        type: string
        required: true
        label: 'velero enabled'
        group: Persistence
        show_subquestion_if: true
        subquestions:
          - variable: persistence.velero.schedule
            default: '@midnight'
            description: ''
            type: string
            required: false
            label: 'velero schedule'
          - variable: persistence.velero.restic
            default: true
            description: ''
            type: boolean
            required: true
            label: 'velero restic'