        options:
          - ReadWriteOnce
          - ReadWriteMany
          - ReadOnlyMany
        required: false
        label: 'access mode'<% for (var i = 0; i < workloads.length; i++) { workload = workloads[i]; if (workload.volumes.length) { %>
