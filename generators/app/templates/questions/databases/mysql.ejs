    default: ''
    description: ''
    type: string
    required: false
    label: integration
    group: 'MySQL Config'
  - variable: config.mysql.host
    default: ''
    description: ''
    type: string
    required: false
    label: host
    show_if: config.mysql.integration=
    group: 'MySQL Config'
  - variable: config.mysql.database
    default: <%- _.snakeCase(name) %>
    description: ''
    type: string
    required: true
    label: database
    group: 'MySQL Config'
