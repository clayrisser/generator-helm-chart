    default: 3306
    description: ''
    type: int
    min: 0
    max: 65535
    required: true
    label: port
    show_if: config.mysql.integration=
    group: 'MySQL Config'
  - variable: config.mysql.url
    default: ''
    description: ''
    type: string
    required: false
    label: url
    show_if: config.mysql.integration=
    group: 'MySQL Config'
  - variable: config.mysql.username
    default: root
